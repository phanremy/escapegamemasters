<div class="container">
  <%= simple_form_for [ @game ] do |f| %>
    <%= f.input :name %>
    <%= f.association :company %>
    <%= f.input :description, as: :text %>
    <%= f.input :rating, collection: 1..5 %>
    <%= f.input :price %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
