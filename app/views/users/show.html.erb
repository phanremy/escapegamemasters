<div class="container">
  <div class="row">
    <div class="col-12 col-lg-6 py-2">
     <h2> <%= @user.first_name %>'s Stats </h2>
     <p> <%= @user.first_name %> a participe a <b><%= @plays.length - @pending.length %></b> jeux et a <b><%= @pending.length %></b> jeux en attente </p>
     <p> <b><%= @win.length %></b> jeux gagnes,  <b><%= @lose.length %></b> jeux perdu</p>

    </div>
    <div class="col-12 col-lg-6 py-2">
     <h2> <%= @user.first_name %> 's Plays </h2>
     <%= link_to "New Play", new_play_path, class:"btn btn-success mb-2" %>
     <ul>
       <% @plays.each do |play| %>
         <li>
           <%= link_to play_path(play) do  %>
             <%= play.game.name %> - <%= play.game.company.name %>
           <% end %>
            <%= link_to "📝", edit_play_path(play) %>
           <% play.participations.each do |participation|%>
             <% if participation.user %>
               <% if participation.user.avatar.attached? %>
                 <%= cl_image_tag participation.user.avatar.key, class: "avatar"%>
               <% else %>
                 <%= image_tag "https://kitt.lewagon.com/placeholder/users/random", class: "avatar" %>
               <% end %>
             <% else %>
               <%= image_tag "https://kitt.lewagon.com/placeholder/users/random", class: "avatar" %>
             <% end %>
           <% end %>
           Status:
           <% if play.done %>
             <% if play.won %>
               <b style="color:green">WIN</b>
             <% else %>
               <b style="color:red">LOSE</b>
             <% end %>
           <% else %>
           <b>PENDING</b>
           <% end %>
         </li>
       <% end %>
     </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-lg-6 py-2">

    </div>
    <div class="col-12 col-lg-6 py-2">

    </div>
  </div>
</div>
