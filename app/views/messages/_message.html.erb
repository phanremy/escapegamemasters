<div class="message <%= message.from?(current_user) ? "right" : "" %>">
 <% if message.user.avatar.attached? %>
   <%= cl_image_tag message.user.avatar.key, class: "avatar"%>
 <% else %>
   <%= image_tag "https://kitt.lewagon.com/placeholder/users/random", class: "avatar" %>
 <% end %>
 <div class="message-content">
   <%= message.content %>
 </div>
</div>
