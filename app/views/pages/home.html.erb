<div class="py-5 bg-white" id="cards">
  <div class="container container-home text-center">
    <h2> <%= Play.all.count %> Missions Enregistrés, <%= Game.all.count %> Escape Games à decouvrir!</h2>
    <div class="cards">
      <% @play = Play.all.reject { |p| p.photos.sample.nil? }.sample  %>
      <% @play_to_reject1 = @play %>
      <%= render "shared/vertical-card" %>
      <% @play = Play.all.reject { |p| p.photos.sample.nil? || p == @play_to_reject1 }.sample  %>
      <% @play_to_reject2 = @play %>
      <%= render "shared/vertical-card" %>
      <% @play = Play.all.reject { |p| p.photos.sample.nil? || p == @play_to_reject1 || p == @play_to_reject2}.sample  %>
      <%= render "shared/vertical-card" %>
    </div>
  </div>

</div>

