<div class="master-banner" id="master-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path("michael-jasmund-escape.jpg") %>); background-size: cover;">
  <div class="container text-center">
      <p data-aos="fade-down-right" data-aos-duration="3000">ESCAPE GAME MASTERS</p>
      <% if user_signed_in? %>
        <br><%= link_to "Access your Dashboard", user_path(current_user), class:"btn btn-success px-5" %>
      <% else %>
        <br><%= link_to "Start by Signing up!", new_user_registration_path, class:"btn btn-success px-5 mb-2"  %>
        <%= link_to "Access a Sample Dashboard", user_path(User.find(1)), class:"btn btn-primary px-4 mb-2" %>
       <% end %>
  </div>
</div>

